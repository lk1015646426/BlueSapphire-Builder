<Window x:Class="BlueSapphire.Builder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BlueSapphire 发布中心 (专业监控版)" Height="800" Width="700"
        WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="🚀 发布控制台" FontSize="24" FontWeight="Bold" Foreground="#0078D4" Margin="0,0,0,15"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10">
            <StackPanel Margin="0,0,10,0">
                <TextBlock Text="1. 软件信息" FontSize="16" FontWeight="Bold" Margin="0,5,0,5"/>
                <Border BorderBrush="#EEE" BorderThickness="0,0,0,2" Margin="0,0,0,10"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="软件名称:" FontWeight="SemiBold"/>
                        <TextBox x:Name="TxtAppName" Height="30" Margin="0,2,0,5" Padding="5,6"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="版本号:" FontWeight="SemiBold"/>
                        <TextBox x:Name="TxtVersion" Height="30" Margin="0,2,0,5" Padding="5,6" Text="1.0.0"/>
                    </StackPanel>
                </Grid>

                <TextBlock Text="发布者/公司:" FontWeight="SemiBold"/>
                <TextBox x:Name="TxtPublisher" Height="30" Margin="0,2,0,5" Padding="5,6"/>

                <TextBlock Text="AppID (唯一身份证):" FontWeight="SemiBold"/>
                <Grid Margin="0,2,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="TxtAppID" Height="30" Padding="5,6" Background="#FAFAFA"/>
                    <Button Content="🎲 生成新ID" Grid.Column="1" Margin="10,0,0,0" Padding="10,0" Click="BtnGenID_Click"/>
                </Grid>

                <TextBlock Text="2. 路径配置" FontSize="16" FontWeight="Bold" Margin="0,15,0,5"/>
                <Border BorderBrush="#EEE" BorderThickness="0,0,0,2" Margin="0,0,0,10"/>

                <TextBlock Text="项目文件 (.csproj):" FontWeight="SemiBold"/>
                <Grid Margin="0,2,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="60"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="TxtProjectFile" Height="30" Padding="5,6" IsReadOnly="True" Background="#F3F3F3"/>
                    <Button Content="浏览" Grid.Column="1" Margin="5,0,0,0" Click="BtnBrowseProject_Click"/>
                </Grid>

                <TextBlock Text="[A] 原始程序输出位置 (Raw Output):" FontWeight="SemiBold" Foreground="#0078D4"/>
                <Grid Margin="0,2,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="60"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="TxtRawDir" Height="30" Padding="5,6" IsReadOnly="True" Background="#F3F3F3"/>
                    <Button Content="选择" Grid.Column="1" Margin="5,0,0,0" Click="BtnBrowseRaw_Click"/>
                </Grid>

                <TextBlock Text="[B] 最终安装包位置 (Installer Output):" FontWeight="SemiBold" Foreground="#D83B01"/>
                <Grid Margin="0,2,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="60"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="TxtSetupDir" Height="30" Padding="5,6" IsReadOnly="True" Background="#F3F3F3"/>
                    <Button Content="选择" Grid.Column="1" Margin="5,0,0,0" Click="BtnBrowseSetup_Click"/>
                </Grid>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <CheckBox x:Name="ChkMakeInstaller" Content="生成安装包 (Inno Setup)" IsChecked="True" FontWeight="Bold"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <Button x:Name="BtnBuild" Height="45" Content="🔥 开始一键构建 🔥" 
                    Background="#0078D4" Foreground="White" FontSize="18" FontWeight="Bold" Click="BtnBuild_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Grid Margin="0,10,0,0">
                <ProgressBar x:Name="BuildProgress" Height="20" Value="0" Maximum="100"/>
                <TextBlock x:Name="TxtProgressText" Text="准备就绪" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10"/>
            </Grid>
        </StackPanel>

        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="📝 实时构建日志:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtLog" Grid.Row="1" Background="#1E1E1E" Foreground="#00FF00" 
                     FontFamily="Consolas" FontSize="12" TextWrapping="Wrap" 
                     VerticalScrollBarVisibility="Auto" IsReadOnly="True" Padding="5"/>
        </Grid>
    </Grid>
</Window>